<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhongxinxintuo.chuanjiabao.activity.MainActivity">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/main_home_selector"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_invest"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/main_invest_selector"
            android:text="投资" />

        <RadioButton
            android:id="@+id/rb_live"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/main_live_selector"
            android:text="生活" />

        <RadioButton
            android:id="@+id/rb_my"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/main_my_selector"
            android:text="我的" />

    </RadioGroup>

</LinearLayout>

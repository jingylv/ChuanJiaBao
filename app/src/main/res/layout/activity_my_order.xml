<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhongxinxintuo.chuanjiabao.my.activity.MyOrderActivity">

    <LinearLayout
        android:id="@+id/ll_my_order_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_my_order_title_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/my_order_close" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="#44000000" />

        <TextView
            android:id="@+id/tv_my_order_title_name"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="活动中心"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_my_order_title_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:src="@drawable/my_order_more" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_my_order"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/rg_my_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_my_order_discover"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/my_order_discover_selctor"
            android:text="发现" />

        <RadioButton
            android:id="@+id/rb_my_order_order"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/my_order_order_selctor"
            android:text="发现" />

        <RadioButton
            android:id="@+id/rb_my_order_my"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/my_order_my_selctor"
            android:text="发现" />

    </RadioGroup>

</LinearLayout>
